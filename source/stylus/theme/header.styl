header
    width 100%
    max-width tablet
    padding 1em
    box-sizing border-box
    display flex
    align-items center
    justify-content space-between
    flex-flow row wrap

    .logo
        width 75px
        height 75px
        background-color color1
        box-shadow 0px -15px 0px -6px rgba(color1,0.5),
            0px -30px 0px -12px rgba(color1,0.25),
            0px -45px 0px -18px rgba(color1, 0.12)
        display flex
        align-items center
        justify-content center
        flex-flow column
        transition all 0.75s
        color white
        text-decoration none

        &:hover
            box-shadow none

        span
            color white
            font-size 2em

            &:before
                display block


    nav
        padding 0
        margin 0
        display flex
        align-items center
        justify-content space-around
        flex-flow row wrap

        a
            color lead1
            font-size 1em
            margin 0.5em
            padding 0.25em 0
            box-sizing border-box
            font-weight bold
            text-decoration none
            transition all 0.5s

            &:last-child
                margin-right 0

            &.on
            &:hover
                color color1
                cursor pointer
