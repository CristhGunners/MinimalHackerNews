footer
    width 100%

    h4
        margin 1em auto
        display block
        font-size 1em
        color lead1
        text-align center

        a
            text-decoration none
            color lead1
            margin-left 0.5em

            &:hover
                color color1

    nav
        margin 0 auto
        display flex
        align-items center
        justify-content center
        flex-flow row wrap

        a
            color lead1
            text-decoration none
            transition all 0.5s
            font-size 1.25em
            margin 0.5em

            &:hover
                color color1

            span
                &:before
                    display block
