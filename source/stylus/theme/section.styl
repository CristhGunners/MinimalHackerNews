section#content
    width 100%
    max-width tablet
    padding 1em
    box-sizing border-box
    margin 1em auto
    background-color white

    section
        width 100%
        background-color white
        display flex
        align-items center
        justify-content center
        flex-flow column

        .loading
            width 40px
            height 40px
            background-color white
            margin 1em auto
            display block
            display flex
            align-items center
            justify-content center
            transition all 0.5s
            border-radius 50%
            border 0.25rem solid #eeeeee
            border-top-color color1
            animation spin 1s infinite linear

            &.off
                display none

        a.repo
            color lead1
            font-size 1em
            font-weight bold
            text-decoration none
            transition all 0.5s

            &:hover
                color color1

            span
                font-size 1.25em
                &:before
                    vertical-align middle
                    margin-right 0.5em

        .author
            display block
            margin 1.5em auto

            figure
                width 75px
                height 75px
                border-radius 50%
                margin auto
                display block

                img
                    display block
                    margin 0
                    width 100%
                    border-radius 50%

            h2
                color lead1
                text-align center
                font-size 1em

            nav
                display flex
                align-items center
                justify-content center
                flex-flow row wrap

                a
                    color lead1
                    text-decoration none
                    transition all 0.5s
                    font-size 1.25em
                    margin 0.5em

                    &:hover
                        color color1

                    span
                        &:before
                            display block

        p
            color lead1
            text-align center

        h3
            padding 1em
            box-sizing border-box
            color white
            margin 2em auto
            transition all 0.5s
            background-color color1
            box-shadow 0px -15px 0px -6px rgba(color1,0.5),
                0px -30px 0px -12px rgba(color1,0.25),
                0px -45px 0px -18px rgba(color1, 0.12)

            span
                &:not(.datenow)
                    &:before
                        vertical-align middle
                        margin-right 0.5em


        &.list
            display flex
            align-items center
            justify-content center
            flex-flow column
            width 100%

            button#more
                padding 0.5em 1em
                box-sizing border-box
                color white
                background-color color1
                border 0
                margin 1em auto
                font-weight bold
                cursor pointer
                font-size 1.15em
                display none

                &.on
                    display block

            div#articles
                width 100%

                article
                    width 100%
                    margin 1em auto
                    box-sizing border-box
                    display flex
                    align-items center
                    justify-content flex-start
                    flex-flow row nowrap
                    animation fadein 0.5s

                    .buttons
                        display flex
                        align-items center
                        justify-content center
                        flex-flow row wrap
                        margin-left auto

                        button
                        a
                            border 0
                            background-color white
                            color lead1
                            font-size 1.15em
                            cursor pointer
                            transition all 0.5s
                            text-decoration none
                            margin 0 0.25em

                            &:hover
                                color color1

                            &.off
                                display none

                            span
                                &:before
                                    display block

                        a
                            display none

                            &.on
                                display block

                    .info
                        margin 0.25em 0.5em

                        h2
                            margin 0
                            font-weight bold
                            font-size 1.15em
                            color gray1

                            a
                                color gray1
                                text-decoration none
                                transition all 0.5s

                                &:hover
                                    color color1

                        .detail
                            display flex
                            align-items center
                            justify-content flex-start
                            flex-flow row wrap

                            h4
                                color lead1
                                font-size 1em
                                font-weight normal
                                margin 0
                                margin-right 0.5em
                                position relative
                                padding 0 10px 0 5px

                                &:nth-child(-n+4)
                                    &:after
                                        position absolute
                                        right -5px
                                        content "â€¢"
