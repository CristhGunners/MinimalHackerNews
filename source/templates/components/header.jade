block link
    - var selected = 'Top'; //default

block menu
    - var headerbase = '.'

- var menu = { 'Top': `${headerbase}/` , 'Best': `${headerbase}/best`, 'About': `${headerbase}/about`};

header
    a(href="#{headerbase}/").logo
        span.icon-hacker-news

    nav
        each val, key in menu
            if selected === key
                a.on(href=val, title=key)= key
            else
                a(href=val, title=key)= key
